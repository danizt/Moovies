<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">


            <TextView
                android:id="@+id/tvAppName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="@string/app_name"
                android:textAppearance="@android:style/TextAppearance.Material.Title"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_below="@+id/tvAppName"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/round_logo" />

            <TextView
                android:id="@+id/tvDeveloper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/ivLogo"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="25dp"
                android:text="@string/developer"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvdtDeveloper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tvDeveloper"
                android:layout_alignBottom="@+id/tvDeveloper"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_toEndOf="@+id/tvDeveloper"
                android:layout_toRightOf="@+id/tvDeveloper"
                android:text="@string/developer_name"
                android:textAlignment="textEnd" />

            <ImageView
                android:id="@+id/ivGitHub"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/tvdtDeveloper"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/github" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>